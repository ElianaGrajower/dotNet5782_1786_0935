<Window x:Class="PL.DroneListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="DroneListWindow" Height="450" Width="800">
    <Grid Background="#FF7D9BC0">

        <ComboBox Name="weightSelector" Margin="554,36,76,349" SelectionChanged="weightSelector_SelectionChanged"/>
        <ComboBox x:Name="StatusSelector" Margin="192,36,448,349" SelectionChanged="StatusSelector_SelectionChanged"></ComboBox>
        <Label Content="Drone Max weight:" HorizontalAlignment="Left" Margin="403,36,0,0" VerticalAlignment="Top" Grid.Column="0" FontSize="16"/>
        <Label Content="Drone Status:" Margin="84,36,593,349" FontSize="16"></Label>
        <ListView x:Name="DronesListView" SelectionChanged="DronesListView_SelectionChanged" Margin="0,90,0,94" DataContext="{Binding}" ItemsSource="{Binding}" MouseDoubleClick="DronesListView_MouseDoubleClick" Background="White">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button Content="add new drone" Margin="607,352,62,30" Click="Button_Click" Background="#FF468BE1"/>
        <Button Content="close" HorizontalAlignment="Left" Margin="84,358,0,32" VerticalAlignment="Top" Width="91" Height="22" Click="Button_Click_1" Background="#FFC74D64"/>

    </Grid>
</Window>
